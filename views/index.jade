extends layout

block content
	#page-content-wrapper
		.page-content.inset
			.row
				a#menu_toggle.btn.btn-default(href="#")
					i.fa.fa-bars
				.col-md-12
					h1
						center DoPy Portal
					if(user)
						p You are logged in as #{user.username}
					if(!user)
						p
							Welcome This is the Department Of Photography Portal. To proceed use the Quick Nav Bar
							br
							on the left for easy navigation. However, it seems like you have not yet logged in.
							br
							Please login with your favourite networking service by selecting one on the left.
					footer
						Copyright Department Of Photography, Passport.JS. We do not share your credentials!
	script
		$("menu-toggle").click(function(e) {
			e.preventDefault();
			$("#wrapper").toggleClass("active");
		});
	
